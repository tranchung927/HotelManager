<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="vn.edu.aptech.hotelmanager.controllers.CheckInOptionController"
          alignment="CENTER" hgap="20.0" vgap="20.0" styleClass="grid-pane" stylesheets="@../css/Button.css">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" prefWidth="200"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="50"/>
    </rowConstraints>
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
    </padding>
    <MFXButton prefWidth="300" prefHeight="50" buttonType="RAISED" fx:id="checkInButton" text="Check In" onMouseClicked="#onClickedCheckIn"/>
    <MFXButton prefWidth="300" prefHeight="50" buttonType="RAISED" fx:id="repairingButton" text="The room is under repair" onMouseClicked="#onClickedRepairing" GridPane.rowIndex="1"/>
    <MFXButton prefWidth="300" prefHeight="50" buttonType="RAISED" fx:id="repairSuccessButton" text="The room has been repaired" onMouseClicked="#onClickedRepaired" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <MFXButton prefWidth="300" prefHeight="50" buttonType="RAISED" fx:id="dirtyButton" text="The room is being cleaned" onMouseClicked="#onClickedDirty" GridPane.rowIndex="2"/>
    <MFXButton prefWidth="300" prefHeight="50" buttonType="RAISED" fx:id="cleanButton" text="the room was cleaned" onMouseClicked="#onClickedClean" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
</GridPane>