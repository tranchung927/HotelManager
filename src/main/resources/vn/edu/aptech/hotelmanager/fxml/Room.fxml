<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
           prefWidth="550.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="vn.edu.aptech.hotelmanager.controllers.RoomController">
    <AnchorPane prefHeight="500.0" prefWidth="700.0">
        <MFXTextField fx:id="roomNameTextField" floatMode="ABOVE" layoutX="71.0" layoutY="68.0"
                      maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="150.0"/>
        <Label layoutX="71.0" layoutY="39.0" text="Room name :"/>
        <Label layoutX="73.0" layoutY="131.0" text="Status :"/>
        <MFXComboBox fx:id="statusComboBox" floatMode="ABOVE" layoutX="73.0" layoutY="158.0"
                     maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="150.0"
                     promptText="Choose"/>
        <Label layoutX="73.0" layoutY="228.0" text="Number of bed:"/>
        <MFXTextField fx:id="nobTextField" floatMode="ABOVE" layoutX="73.0" layoutY="255.0"
                      maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="150.0"/>
        <MFXTextField fx:id="priceTextField" floatMode="ABOVE" layoutX="340.0" layoutY="69.0"
                      maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="150.0"/>
        <Label layoutX="340.0" layoutY="39.0" text="Price :"/>
        <Label layoutX="344.0" layoutY="133.0" text="Category :"/>
        <MFXTextField fx:id="categoryTextField" floatMode="ABOVE" layoutX="344.0" layoutY="159.0"
                      maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="30.0" prefWidth="150.0"/>
        <MFXButton fx:id="saveRoomBtn" buttonType="RAISED"
                   layoutX="366.0" layoutY="352.0"
                   prefHeight="25.0" prefWidth="53.0" text="Save"
                   onMouseClicked="#onClickSaveOrUpdate"/>
        <MFXButton fx:id="deleteRoomBtn" buttonType="RAISED" layoutX="451.0" layoutY="352.0"
                   onMouseClicked="#deleteRoom" text="Delete"/>
    </AnchorPane>
</StackPane>
